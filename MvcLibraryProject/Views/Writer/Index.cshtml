@model List<MvcLibraryProject.Models.TblWriter>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><strong>Yazar Listem</strong></h3>
            @using (Html.BeginForm("Index", "Employee", FormMethod.Get))
            {
                <div class="card-tools">
                    <div class="input-group input-group-sm float-right" style="width: 220px;">
                        @Html.Editor("key")

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yazar Adı</th>
                        <th>Yazar Soyadı</th>
                        <th>Yazar Detayları</th>
                        <th style="width:10%">Sil</th>
                        <th style="width:10%">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.WriterId</td>
                            <td>@item.WriterName</td>
                            <td>@item.WriterSurname</td>
                            <td>@item.WriterDetail</td>
                            <td><a href="/Writer/DeleteWriter/@item.WriterId/" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
                            <td><a href="/Writer/UpdateWriter/@item.WriterId/" class="btn btn-success"><i class="fas fa-edit"></i> Güncelle</a></td>

                        </tr>
                    }
                </tbody>
            </table>

            <div class="card-footer">
                <a href="/Writer/AddWriter/" class="btn btn-primary"><i class="fas fa-bookmark"></i> Yazar Ekle</a>
            </div>
        </div>
    </div>
</section>