@model MvcLibraryProject.Models.TblBook

@{
    ViewBag.Title = "UpdateBook";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kitap Güncelleme Ekranı</h3>
    </div>
    <form role="form" method="post">
        <div class="card-body">
            <div class="form-group"><br />
                @Html.HiddenFor(x => x.BookId)
                @Html.Label("Kitap Adı")
                @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Yayın Yılı")
                @Html.TextBoxFor(x => x.BookPublishingYear, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Yayınevi")
                @Html.TextBoxFor(x => x.BookPublishingHouse, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Sayfa Sayısı")
                @Html.TextBoxFor(x => x.BookPageCount, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Kategori")
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Yazar")
                @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.writers, new { @class = "form-control" })
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Kitap Güncelle</button>
        </div>
    </form>
</div>